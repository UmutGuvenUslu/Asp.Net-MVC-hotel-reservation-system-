        margin-top: auto;
    }


</style>





        @foreach (var item in Model)
        {
           


    <div class="card mx-auto" style="max-width: 1200px; border: 1px solid #ccc;">
        <div class="row g-0">
            
            <div class="col-md-5">
                <img src="@item.HotelImgUrl" class="img-fluid h-100" style="object-fit: cover;" />
            </div>
         
            <div class="col-md-7 d-flex flex-column px-3">
          
                <div class="card-block px-3">
                    <h4 class="card-title">@item.HotelName</h4>
                    <p class="card-text small">
                        @item.HotelDesc
                    </p>
                </div>
             
                <div class="mt-auto ">
                    <div class="card-footer d-flex  justify-content-between align-items-center">
                        <div class="adresler">
                            <p class="card-text small mb-0">@item.HotelAdress</p>
                            <p class="card-text small">@item.City.Name / @item.District.DistrictName</p>
                        </div>
                        <form method="post" asp-action="detay" asp-controller="Hotel">
                            <input type="hidden" name="HotelId" value="@item.HotelId" />
                            <input type="hidden" name="baslangicTarihi" value="@TempData["otelgiris"]" />
                            <input type="hidden" name="bitisTarihi" value="@TempData["otelcikis"]" />
                            <button type="submit" class="btn btn-primary">Rezervasyon Yap</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>




        }






