@model OtelZone.Entity.Entities.User




<style>
    /* Tüm modal close butonları için genel stil */
    .modal .close {
        font-size: 1.5rem; /* Çarpı boyutu */
        color: #333; /* Çarpı rengi */
        opacity: 0.8; /* Hafif şeffaflık */
        transition: color 0.3s, transform 0.3s; /* Geçiş efekti */
        border: none; /* Çerçeve kaldır */
        background: none; /* Varsayılan arka planı kaldır */
        outline: none; /* Fokus kutusunu kaldır */
        cursor: pointer; /* Fare simgesi */
    }

        .modal .close:hover {
            color: #ff5e5e; /* Hover'da kırmızı ton */
            transform: rotate(90deg); /* Hafif döndürme efekti */
            opacity: 1; /* Şeffaflık kaldır */
        }

    /* Modal başlığına yer bırakma */
    .modal .modal-title {
        flex-grow: 1; /* Çarpı ile başlık arasını aç */
        text-align: center; /* Başlığı ortala */
        margin-right: 20px; /* Çarpıya mesafe ver */
    }
</style>






<div id="form">
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm ">
            </div>
            <div class="col-sm mt-5">




                <div class="card text-center">
                    <div class="card-header ">
                        Giriş Yap
                    </div>
                    <div class="card-body mt-3">
                        <form method="post" asp-controller="Giris" asp-action="Index">
                            <div class="form-group">
                                <label class="mt-2" for="formGroupExampleInput">Email</label>
                                <input type="text" class="form-control mt-2" id="formGroupExampleInput" placeholder="Email" asp-for="UserEmail">
                            </div>
                            <div class="form-group">
                                <label class="mt-2" for="formGroupExampleInput2">Şifre</label>
                                <div class="input-group mt-2">
                                    <input type="password" class="form-control" id="formGroupExampleInput2" placeholder="Şifre" asp-for="UserPassword">
                                    <span class="input-group-text" id="togglePassword">
                                        <i class="bi bi-eye-slash" id="eyeIcon"></i> 
                                    </span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary mt-4">Giriş Yap</button>
                        </form>

                    </div>
                    <div class="card-footer text-muted">
                        Üye Değil Misin? - <a asp-controller="Giris" asp-action="uyeol">Üye Ol</a>
                    </div>
                </div>
            </div>
            <div class="col-sm">
            </div>
        </div>
    </div>

    @if(ViewBag.Hata==true){
        <div class="modal fade show d-block " id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Hatalı Giriş</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick=" closeModal()">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Email Veya Şifre Hatalı.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" onclick=" closeModal()">Kapat</button>
                    </div>
                </div>
            </div>
        </div>
        
    }

<script>
function closeModal() {
    var modal = document.getElementById('exampleModalCenter');
    modal.classList.remove('show', 'd-block'); 
    modal.setAttribute('aria-hidden', 'true');
               setTimeout(() => {
                   modal.style.display = "none";
                 }, 500); 



        }



</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
       
        $('#togglePassword').on('click', function() {
            const passwordField = $('#formGroupExampleInput2');
            const eyeIcon = $('#eyeIcon');

            if (passwordField.attr('type') === 'password') {
                passwordField.attr('type', 'text');
                eyeIcon.removeClass('bi-eye-slash').addClass('bi-eye'); 
            } else {
                passwordField.attr('type', 'password');
                eyeIcon.removeClass('bi-eye').addClass('bi-eye-slash'); 
            }
        });
    </script>


   
