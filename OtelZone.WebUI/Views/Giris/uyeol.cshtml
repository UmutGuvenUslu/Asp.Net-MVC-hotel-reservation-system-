@model OtelZone.Entity.Entities.User





<style>
    
    .modal .close {
        font-size: 1.5rem; 
        color: #333;
        opacity: 0.8; 
        transition: color 0.3s, transform 0.3s; 
        border: none; 
        background: none;
        outline: none; 
        cursor: pointer; 
    }

        .modal .close:hover {
            color: #ff5e5e; 
            transform: rotate(90deg); 
            opacity: 1; 
        }

   
    .modal .modal-title {
        flex-grow: 1; 
        text-align: center; 
        margin-right: 20px; 
    }
</style>





















<div class="container mt-5">
    <div class="row">
        <div class="col-sm ">
         
        </div>
        <div class="col-sm mt-5">




            <div class="card text-center">
                <div class="card-header ">
                    Üye Ol
                </div>
                <div class="card-body mt-3">
                    <div asp-validation-summary="ModelOnly"></div>
                    <form method="post" asp-action="uyeol" asp-controller="Giris">
                        <div class="form-group">
                            <label class="mt-2" for="formGroupExampleInput">İsim</label>
                            <input type="text" class="form-control mt-2" placeholder="isim" asp-for="UserName"><span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label class="mt-2" for="formGroupExampleInput">Soyisim</label>
                            <input type="text" class="form-control mt-2" placeholder="Soyisim" asp-for="UserSurname"><span class="text-danger" asp-validation-for="UserSurname"></span>
                        </div>
                        <div class="form-group">
                            <label class="mt-2" for="formGroupExampleInput2">Email</label>
                            <input type="email" class="form-control mt-2" placeholder="Email" asp-for="UserEmail"><span class="text-danger" asp-validation-for="UserEmail"></span>
                        </div>
                        <div class="form-group">
                            <label class="mt-2" for="formGroupExampleInput2">Telefon</label>
                            <input type="tel" class="form-control mt-2" placeholder="Telefon" asp-for="UserPhone"><span class="text-danger" asp-validation-for="UserPhone"></span>
                        </div>
                        <div class="form-group">
                            <label class="mt-2" for="formGroupExampleInput2">Şifre</label>
                            <div class="input-group mt-2">
                                <input type="password" class="form-control" placeholder="Şifre" asp-for="UserPassword" id="userPassword">
                                <span class="input-group-text" id="togglePassword">
                                    <i class="bi bi-eye-slash" id="eyeIcon"></i> 
                                </span>
                            </div>
                            <span class="text-danger" asp-validation-for="UserPassword"></span>
                        </div>


                        <input type="submit" class="btn btn-primary mt-4" value="Üye Ol"/>
                    </form>

                </div>
                <div class="card-footer text-muted">
                    Zaten Üye Misin? - <a asp-controller="Giris" asp-action="Index">Giris Yap</a>
                </div>
            </div>
        </div>
        <div class="col-sm">
          
        </div>
    </div>
</div>






@if (ViewBag.Hata == true)
{
    <div class="modal fade show d-block " id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Hatalı Giriş</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick=" closeModal()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Hatalı Üye Olma İşlemi
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick=" closeModal()">Kapat</button>
                </div>
            </div>
        </div>
    </div>

}

<script>
    function closeModal() {
        var modal = document.getElementById('exampleModalCenter');
        modal.classList.remove('show', 'd-block'); 
        modal.setAttribute('aria-hidden', 'true');
                   setTimeout(() => {
                       modal.style.display = "none";
                     }, 500); 



            }



</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>



<script>
    
    $('#togglePassword').on('click', function() {
        const passwordField = $('#userPassword');
        const eyeIcon = $('#eyeIcon');

        
        if (passwordField.attr('type') === 'password') {
            passwordField.attr('type', 'text');
            eyeIcon.removeClass('bi-eye-slash').addClass('bi-eye'); 
        } else {
            passwordField.attr('type', 'password');
            eyeIcon.removeClass('bi-eye').addClass('bi-eye-slash'); 
        }
    });
</script>


























